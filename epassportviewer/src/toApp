rm -rf build/
rm -rf dist/
rm "dmg/epassportviewer-0.2c.osx.dmg"
python setup.py py2app
# http://pseudofish.com/blog/2005/07/13/creating-a-dmg-for-installation/
cp INSTALL dist/
cp README dist/
cp LICENSE dist/
cp CHANGES dist/
hdiutil create -volname "ePassport Viewer" -srcfolder "dist/" "dmg/epassportviewer-0.2c.osx.dmg"
hdiutil internet-enable "dmg/epassportviewer-0.2c.osx.dmg"